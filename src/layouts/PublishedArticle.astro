---
import Article from 'layout:Article';
import DateStamp from 'component:DateStamp.astro';
import ArticleTags from 'component:ArticleTags.astro';

const { content } = Astro.props;
---
<Article content={content}>
    <header slot="article-header">
        <h1>{content.title}</h1>
        <p><DateStamp timestamp={ content.date } /></p>
        <ArticleTags tags={content.tags} />
    </header>
    <slot />
</Article>
