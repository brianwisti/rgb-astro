---
/** Render something in a summary card. */
import DateStamp from 'component:DateStamp.astro';
import ArticleTags from 'component:ArticleTags.astro';

const { article } = Astro.props;
---
<div>
    <h3>
        <a href={ article.href } set:html={ article.title } />
    </h3>
    <p><DateStamp timestamp={ article.date } /></p>
    <slot />
    <footer>
      <ArticleTags tags={article.tags} />
    </footer>
</div>

<style>
div {
    max-width: min(100%, 68ch);
    margin: auto;
}

footer {
  text-align: right;
  font-size: smaller;
}
</style>
