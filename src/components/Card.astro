---
/** Render something in a summary card. */
import DateStamp from 'component:DateStamp.astro';

const { article } = Astro.props;
---
<div>
    <h3>
        <a href={ article.url }>{ article.title }</a>
    </h3>
    <p><DateStamp timestamp={ article.date } /></p>
    <slot />
</div>

<style>
div {
    max-width: min(100%, 68ch);
    margin: auto;
}
</style>