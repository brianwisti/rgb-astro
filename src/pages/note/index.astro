---
/** Show the most recent Note content. */

import SectionIndex from 'layout:SectionIndex';
import NoteCard from 'component:NoteCard.astro';
import contentSummaries from '../../config.mjs';

const allNotes = contentSummaries.filter(contentSummary => contentSummary.section === "note");
const recentNotes = allNotes
    .sort((a, b) =>
        new Date(b.date).valueOf() - new Date(a.date).valueOf()
    )
    .slice(0, 10);

let content = {
    title: "Notes",
}
---
<SectionIndex content={content} section="note">
    {recentNotes.map((note) => <NoteCard note={note} />)}
</SectionIndex>